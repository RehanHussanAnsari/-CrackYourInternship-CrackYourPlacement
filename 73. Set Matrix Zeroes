class Solution {
public:

static void setRowColZero(vector<vector<int>>&matrix, int row, int col){
    for(int i=0;i<matrix.size();i++){
        matrix[i][col] = 0;
    }
    for(int i=0;i<matrix[0].size();i++){
        matrix[row][i] = 0;
    }
}

    void setZeroes(vector<vector<int>>& matrix) {
        vector<vector<int>>temp;
        for(int i=0;i<matrix.size();i++){
            for(int j=0;j<matrix[i].size();j++){
                if(matrix[i][j] == 0){
                    // setRowColZero(matrix,i,j);
                    vector<int>temp2;
                    temp2.push_back(i);
                    temp2.push_back(j);
                    temp.push_back(temp2);
                }
            }
        }
        for(auto it:temp) setRowColZero(matrix,it[0],it[1]);
    }
};
